<div class="page-header">
  <h1>Crime Map</h1>
</div>

<div class="center-block google-map">
  <div id="map" class="google-map"></div>
  </div>
 <script type="text/javascript">
    var map = new GMaps({
        div: "#map",
        lat: -12.0600794,
        lng: -77.0285318,
        width: '100%',
        height: '400px'
    });
    
    map.addMarkers([
    <% @crimes.each do |crime| %>
    {
        lat: <%= crime.latitude  %>,
        lng: <%= crime.longitude %>
    },
    <% end %>

    ]);
    map.setZoom(10);
  </script>
