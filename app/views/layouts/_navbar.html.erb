<%= nav_bar responsive: true, brand: image_tag("logo2.png", class: "menu_icon")  do %>
  <%= menu_group do %>
    <% if current_user %>
      <%= menu_item "Home", root_path %>
      <%= menu_item "Crime Reports", crimes_path %>
      <%= menu_item "Crime Map", crime_map_index_path%>
      <%= menu_item "About Us", home_about_path %>
    <% else %>
      <%= menu_item "Home", root_path %>
      <%= menu_item "About Us", home_about_path%>
      <%= menu_item "Sign up", new_user_registration_path %>
      <%= menu_divider %>
    <% end %>
  <% end %>
  <%= menu_group pull: :right do%>
    <% if current_user %>
      <%= menu_text "Welcome " + @user.name, class: 'welcome-msg' %>
      <%= menu_item "Log out", destroy_user_session_path, :method => :delete %>
    <%else%>
      <%= menu_item "Log in", new_user_session_path %>
    <% end%>
  <% end%>
<%end%>
