<%= nav_bar responsive: true,  brand: "Report a Crime" do %>
  <%= menu_group do %>
    <% if current_user %>
      <%= menu_item "Home", root_path %>
      <%= menu_item "Reports", reports_path %>
      <%= menu_item "About Us", home_about_path %>
    <% else %>
      <%= menu_item "Home", root_path %>
      <%= menu_item "About Us", home_about_path%>
      <%= menu_item "Sign up", new_user_registration_path %>
      <%= menu_divider %>
    <% end %>
  <% end %>
  <%= menu_group pull: :right do%>
    <% if current_user %>
      <%= menu_text "Welcome " + @user.name %>
      <%= menu_item "Log out", destroy_user_session_path, :method => :delete %>
    <%else%>
          <%= simple_form_for(User.new, html: {class: 'navbar-form navbar-right form-inline'}, url: new_session_path(:user))  do |f| -%>
            <%= f.input :email, input_html: {size: 10}%>
            <%= f.input :password, input_html: {size: 10}%>
            <%= f.submit "Sign in" %>
          <% end %>
    <% end%>
  <% end%>
<%end%>
