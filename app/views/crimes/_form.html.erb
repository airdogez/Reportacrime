<%= simple_form_for @crime, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@crime[:name]) %>
  <%= f.input :description %>
  <%= error_span(@crime[:description]) %>
  <%= f.input :category_id,:collection => Category.all,:label_method => :name,:value_method => :id,:label => "Category" ,:include_blank => false %>
  <%= error_span(@crime[:category]) %>
  <%= f.input :district_id,:collection => District.all,:label_method => :name,:value_method => :id,:label => "District" ,:include_blank => false %>
  <%= error_span(@crime[:district]) %>
  <%= f.input :details %>
  <%= error_span(@crime[:details]) %>
  <%= f.input :address%>
  <%= error_span(@crime[:address]) %>
  <%= f.simple_fields_for :crime_images do |i| %>
        <%= i.file_field :photo, as: :file, multiple: true %>
  <% end %>
  <%= error_span(@crime[:crime_images]) %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                crimes_path, :class => 'btn btn-default' %>
<% end %>
