<%= simple_form_for @crime, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@crime[:name]) %>
  <%= f.input :description %>
  <%= error_span(@crime[:description]) %>
  <%= f.association :category%>
  <%= error_span(@crime[:category]) %>
  <%= f.association :district %>
  <%= error_span(@crime[:district]) %>
  <%= f.input :address%>
  <%= error_span(@crime[:address]) %>
  <%= f.input :tag_list %>
  <%= error_span(@crime[:tag_list]) %>
  <%= f.simple_fields_for :crime_images do |i| %>
        <%= i.file_field :photo, as: :file, multiple: true %>
  <% end %>
  <%= error_span(@crime[:crime_images]) %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                crimes_path, :class => 'btn btn-default' %>
<% end %>
